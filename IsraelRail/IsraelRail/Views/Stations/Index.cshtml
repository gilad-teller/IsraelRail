@using IsraelRail.Models
@model Dictionary<E_Station, string>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/stations.js"></script>
<h1>Stations</h1>

<form>
    <div class="form-row">
        <div class="col">
            <select id="station" class="custom-select">
                @foreach (KeyValuePair<E_Station, string> s in Model)
                {
                    <option value="@((int)s.Key)">@s.Value</option>
                }
            </select>
        </div>
        <div class="col">
            <button type="button" id="getDataBtn" class="btn btn-primary" onclick="GetStationData()">
                <span id="getDataSpinner" class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none"></span>
                <span id="getDataLoad" style="display: none">Loading...</span>
                <span id="getDataTxt">Get Station</span>
            </button>
        </div>
    </div>
</form>

<div id="content"></div>